  border: 1px solid {{secondaryColor}};  /* Açık yeşil kenarlık */
  border-radius: 4px;
  padding: 2px;
}

QToolButton#button_leftMenuHydraulicCalibration{
  text-transform: uppercase;
  height:80px;
  font-weight: bold;
  color: #FFFFFF;             /* Açık yeşil yazı rengi */
  background-color: {{secondaryLightColor}};;  /* Koyu yeşil arka plan */
  border: 1px solid {{secondaryColor}};  /* Açık yeşil kenarlık */
  border-radius: 4px;
  padding: 2px;
}
QToolButton#button_leftMenuEncoderCalibration{
  text-transform: uppercase;
  height: 80px;
  font-weight: bold;
  color: #FFFFFF;             /* Açık yeşil yazı rengi */
  background-color: {{secondaryLightColor}};;  /* Koyu yeşil arka plan */
  border: 1px solid {{secondaryColor}};  /* Açık yeşil kenarlık */
